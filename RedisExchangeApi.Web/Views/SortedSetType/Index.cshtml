<h1>Sorted Set type</h1>

<form asp-action="Add" asp-controller="SortedSetType" method="post" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <input type="number" name="score" />
    <button type="submit">Kaydet</button>
</form>

<!--<a asp-controller="SetType" asp-action="DeleteFirstItem">Bastan sil</a>-->
@foreach (var item in Model)
{
    <h2>@item - <a asp-controller="SortedSetType" asp-action="DeleteItem" asp-route-name="@item">Sil</a></h2>
}